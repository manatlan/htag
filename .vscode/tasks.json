{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build dist for pypi",
            "type": "shell",
            "command": [
                    "python3 -m pytest .",
                    "&& python3 .vscode/update_version_from_toml.py",
                    "&& poetry build"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [],
            "presentation": {
                "panel": "new",
                "focus": true
            }
        },
        {
            "label": "upload to pypi",
            "type": "shell",
            "command": "poetry publish",
            "problemMatcher": [],
            "presentation": {
                "panel": "new",
                "focus": true
            }
        },
        {
            "label": "Test Coverage",
            "type": "shell",
            "command": "python3 -m pytest --cov-report html --cov=htag . && google-chrome htmlcov/index.html",
            "problemMatcher": [],
            "presentation": {
                "panel": "new",
                "focus": true
            }
        },
        {
            "label": "clean repo",
            "type": "shell",
            "command": "rm -rf build __pycache__ htag/__pycache__ htag/runners/__pycache__ .pytest_cache .coverage htmlcov",
            "problemMatcher": [],
            "presentation": {
                "panel": "new",
                "focus": true
            }
        },
        {
            "label": "Build zip with all",
            "type": "shell",
            "command": "rm -rf build __pycache__ htag/__pycache__ htag/runners/__pycache__ .pytest_cache .coverage htmlcov;  zip -r src.zip htag examples test_*",
            "problemMatcher": [],
            "presentation": {
                "panel": "new",
                "focus": true
            }
        },
    ]
}